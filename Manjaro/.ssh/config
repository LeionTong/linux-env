Host lenovo-ubuntu
    HostName lenovo-ubuntu
    Port 22
    User leion
    IdentityFile ~/.ssh/id_rsa

Host lenovo-centos
    HostName lenovo-centos
    Port 22
    User leion
    IdentityFile ~/.ssh/id_rsa

Host lfs9.0
    HostName lfs9.0
    Port 22
    User leion
    IdentityFile ~/.ssh/id_rsa

Host lenovo-openeuler
    HostName lenovo-openeuler
    Port 22
    User root
    IdentityFile ~/.ssh/id_rsa

